@import "consts.styl"


reset()
  html, body, div, ul, li, input, h1, h2, h3, h4, h5
    margin 0
    padding 0
    box-sizing border-box

:global
  reset()

  body
    font-family "Noto Sans KR", sans-serif

  li
    list-style none

  a
    color inherit

  strong
    background #FFC700
    color color-strong

  input, button
    border 1px solid color-secondary
    border-radius 4px

.container
  margin 0 auto
  padding 20px 20px 40px 20px
  max-width 640px
  > h1
    margin 20px 0 20px 0
    text-align left
    > span
      display inline-block
  > h3
    margin 20px 0 20px 0
    text-align center

.logo
  position relative
  max-width 720px
  margin auto
  text-align right
  font-size 0
  h3
    height 32px
    img
      margin 4px
    span
      position absolute
      top 12px
      left 4px
      font-size 10px
      color color-secondary
