.notice
  li
    padding 4px 8px
  li:last-child
    margin-bottom 4px

  h4
    font-size 1.0rem
    line-height 1.2rem
    font-weight bold

  h4:after
    content ' '
    display inline-block
    width 100%
    height 2px
    background #ffc700

   h4:last-child
    margin-bottom 4px

.candidates
  min-height 200px
  margin-bottom 20px
  overflow auto
  .message
    text-align center
  table
    padding-top: 24px;
    input[type="checkbox"]
      width 16px
      height 16px
      background white
      cursor pointer
    td
      position relative
      padding 0 4px 0 4px
      white-space nowrap
      line-height 32px
    td.checkbox
      text-align center
    .all
      position absolute
      top -32px
      left 0
    thead
      td.count
        text-align center
      td.status
        text-align center
    tbody
      tr
        td.name
          font-weight bold
        td.agreed
          text-align center
          font-weight bold
        td.count, td.contact
          padding 0 24px 0 24px
          text-align right
          opacity 0.9
          font-size 0.9rem

.ask
  width 100%
  font-size 1.1rem
  padding 12px 16px 12px 16px
  color white
  background #463e39
