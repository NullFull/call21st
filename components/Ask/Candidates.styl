
.candidates
  min-height 200px
  margin-bottom 20px
  overflow auto
  .message
    text-align center
  table
    padding-top 24px
    input[type="checkbox"]
      width 16px
      height 16px
      background white
      cursor pointer
    td
      position relative
      padding 0 4px 0 4px
      white-space nowrap
      line-height 32px
    td.checkbox, td.status
      text-align center
    td.agreed
      min-width 40px
      text-align center
    .all
      position absolute
      top -32px
      left 0
    thead
      td.count, td.sns
        text-align center
    tbody
      tr
        td.name
          font-weight bold
        td.agreed
          font-weight bold
        td.count
          text-align right
        td.count, td.contact, td.status
          padding 0 24px 0 24px
          opacity 0.9
          font-size 0.9rem
        td.sns
          display flex
          a
            display flex
            padding 2px
            opacity 0.9
